<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %> 
    Has <%= pluralize(@beer.ratings.count, 'rating')%> 
  <% else%>

  Has <%= pluralize(@beer.ratings.count, 'rating')%>, average <%= round(@beer.average_rating)%>. 
  <% end %>
</p>
<%if current_user %>

  <h4> rate this beer </h4>

  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score <%= f.number_field :score %>
    <%= f.submit class:"btn btn-primary"%>
  <% end %>
  
  <%= edit_and_destroy_buttons(@beer) %>
<% end %>
<%= link_to 'Back', beers_path , class:'btn btn-outline-primary'%> 
