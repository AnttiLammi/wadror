<p id="notice"><%= notice %></p>

<h2>
  <%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="badge badge-info"> retired </span>
  <% end %>
</h2>
<p>

</p>
<p>
  <strong>Year:</strong>
  <i>Established in
  <%= @brewery.year %> </i>
</p>
<p> 
Number of beers 
<%= @brewery.beers.count%>
</p>

<p> 
  <% @brewery.beers.each do |beer| %>
    <td><%= link_to beer.name, beer %></td>
  <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %> 
    Has <%= pluralize(@brewery.ratings.count, 'rating')%> 
  <% else%>

  Has <%= pluralize(@brewery.ratings.count, 'rating')%>, average <%= round(@brewery.average_rating)%>. 
  <%end%>
</p>
<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-outline-primary" %>
<%= edit_and_destroy_buttons(@brewery) %>
<%= link_to 'Back', breweries_path , class:'btn btn-outline-primary'%>
